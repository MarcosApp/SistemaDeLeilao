@model OfertaModel
@{
    ViewData["Title"] = "Confirmação apagar oferta";
}

<div class="text-center">
    <h3>Realmente deseja apagar o oferta (@Model.NomeOferta)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Oferta" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Oferta" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
