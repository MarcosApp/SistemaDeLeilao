@model TransportadorModel
@{
    ViewData["Title"] = "Confirmação apagar transportador";
}

<div class="text-center">
    <h3>Realmente deseja apagar o Transportador (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Transportadores" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Transportadores" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
